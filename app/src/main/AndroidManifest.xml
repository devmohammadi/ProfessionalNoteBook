<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mohammadi.dashti.professionalnotebook">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProfessionalNoteBook.MainActivity">
        <activity android:name=".activity.UpdateShowDeleteNoteActivity"
            android:theme="@style/Theme.ProfessionalNoteBook.MainActivity">
        </activity>

        <activity
            android:name=".activity.CreateNoteActivity"
            android:theme="@style/Theme.ProfessionalNoteBook.MainActivity" />
        <activity
            android:name=".activity.LoginOrSignUpActivity"
            android:theme="@style/Theme.ProfessionalNoteBook.LoginSignUp" />
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/Theme.ProfessionalNoteBook.MainActivity" />
        <activity
            android:name=".activity.SplashScreenActivity"
            android:theme="@style/Theme.ProfessionalNoteBook.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>